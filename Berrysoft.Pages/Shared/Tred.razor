@using Berrysoft.Pages.Data

@implements IDisposable

@inject ILocalizationService Localization

@((MarkupString)text)

@code {
    [Parameter]
    public string Key { get; set; }

    string text;

    protected override async Task OnInitializedAsync()
    {
        Localization.LanguageChanged += OnLocalizationLanguageChanged;
        await Task.Run(RefreshText);
    }

    private void OnLocalizationLanguageChanged(object sender, string e)
    {
        RefreshText();
    }

    private async void RefreshText() => await RefreshTextAsync();

    private async ValueTask RefreshTextAsync()
    {
        text = await Localization.GetStringAsync(Key);
        StateHasChanged();
    }

    public void Dispose()
    {
        Localization.LanguageChanged -= OnLocalizationLanguageChanged;
    }
}
