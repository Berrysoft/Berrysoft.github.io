@using Berrysoft.Pages.Data

@implements IDisposable

@inject ILocalizationService Localization

@((MarkupString)text)

@code {
    [Parameter]
    public string Key { get; set; }

    string text;

    protected override async void OnInitialized()
    {
        Localization.LanguageChanged += OnLocalizationLanguageChanged;
        await RefreshTextAsync();
    }

    private async void OnLocalizationLanguageChanged(object sender, string e) => await RefreshTextAsync();

    private async Task RefreshTextAsync()
    {
        text = await Localization.GetStringAsync(Key);
        StateHasChanged();
    }

    public void Dispose()
    {
        Localization.LanguageChanged -= OnLocalizationLanguageChanged;
    }
}
