@using Berrysoft.Pages.Data

@implements IDisposable

@inject LocalizationService Localization

@((MarkupString)text)

@code {
    [Parameter]
    public string? Key { get; set; }

    string? text;

    protected override void OnParametersSet()
    {
        Localization.LanguageChangedAsync += OnLocalizationLanguageChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await RefreshTextAsync();
        }
    }

    private ValueTask OnLocalizationLanguageChanged(object sender, string e) => RefreshTextAsync();

    private async ValueTask RefreshTextAsync()
    {
        text = await Localization.GetStringAsync(Key!);
        StateHasChanged();
    }

    public void Dispose()
    {
        Localization.LanguageChangedAsync -= OnLocalizationLanguageChanged;
    }
}
